<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Live" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/logo_blue</item>
        <item name="colorPrimaryVariant">@color/logo_red</item>
        <item name="colorOnPrimary">@color/logo_teal</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="TextViewStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/logo_teal</item>
    </style>

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:background">@color/logo_teal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="background">@color/white</item>
        <item name="titleTextColor">@android:color/transparent</item>
    </style>

</resources>
